.product
  .product__wrapper 
    .product__top 
      - if product.amount > 0
        .product__available В наличии
      - else 
        .product__out_of_stock Нет в наличии
    .product__image 
      = link_to product_path(product) do
        = image_tag('icons/drone2.svg')
    .product__description
      h3= product.name
      h4= "#{product.price} шекелей"
      p= "В наличии: #{product.amount}"
    .product__buybutton
      - if product.amount > 0
        - if current_user
          = link_to 'В корзину', add_to_cart_product_path(product, cart: current_cart), method: :post
        - else 
          = link_to 'В корзину',new_user_session_path
